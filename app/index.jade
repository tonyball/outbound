  ul.side-nav#slide-out-user
    li
      a(href="#/profile").black-text Profile
    li.divider
    li
      a(href="#").black-text Manage Classroom
    li
      a(href="#").black-text My Students
    li.divider
    li
      a(href="#").black-text Account Settings
    li
      a(href="#").black-text User Guide
